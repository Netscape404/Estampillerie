<div class="jumbotron">
  <div class="container">
    <h1 class="text-center">Articles</h1>
  </div>
</div>

<div class="container">

  <%= render 'layouts/flash' %>

  <div class="row">
    <% if @articles.present? %>
      <% @articles.each do |article| %>
        <div class="col-sm-4 col-md-4">
          <div class="thumbnail">
            <img src="<%= article.thumbnail.url(:medium) %>" alt="thumbnail">
            <div class="caption">
              <h3><%= article.title %></h3>
              <p><%= article.description %></p>
              <hr>
              <p><%= article.category %></p>
              <p><a href="#"><%= article.user.username %></a></p>
              <p><%= link_to 'Show', article, class:'btn btn-primary' %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <h5>No article has been published yet</h5>
    <% end %>
  </div>

  <% if current_user && current_user.has_role?(:admin) %>
    <%= link_to 'New Article', new_article_path, class:'btn btn-primary' %>
  <% end %>

</div>
