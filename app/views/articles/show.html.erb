<div class="jumbotron">
  <div class="container">
  </div>
</div>

<div class="container">

  <%= render 'layouts/flash' %>

  <p>
    <strong>Category:</strong>
    <%= @article.category %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Thumbnail:</strong>
    <%= image_tag @article.thumbnail(:medium) %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @article.description %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= raw @article.content %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @article.user.username %>
  </p>

  <% if current_user && current_user.has_role?(:admin) %>
  <%= link_to 'Edit', edit_article_path(@article), class:'btn btn-primary' %>
  <%= button_to "delete", @article, :method => :delete, confirm: 'Are you sure?', class:'btn btn-danger' %>
  <% end %>
  <%= link_to 'Back', root_path, class:'btn btn-default' %>

</div>
