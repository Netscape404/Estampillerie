<%= form_for([@project, @project.comments.build]) do |form| %>
  <div class="form-group row">
    <div class="col-md-5">
      <%= form.text_area :content, rows: 3, class:'form-control' %>
      <%= form.hidden_field :user_id, :value => current_user %>
      <div class="form-actions text-right"><br>
        <%= form.submit 'Submit', class:'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
<hr>
