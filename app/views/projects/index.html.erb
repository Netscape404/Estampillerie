<div class="jumbotron">
  <div class="container">
    <h1 class="text-center">Projects</h1>
  </div>
</div>

<div class="container">

  <%= render 'layouts/flash' %>

    <div class="row">
      <% if @projects.present? %>
        <% @projects.each do |project| %>
          <div class="col-sm-4 col-md-4">
            <div class="thumbnail">
              <img src="<%= project.thumbnail.url(:medium) %>" alt="thumbnail">
              <div class="caption">
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <hr>
                <p><%= project.difficulty %></p>
                <p><a href="#"><%= project.user.username %></a></p>
                <p><%= link_to 'Show', project, class:'btn btn-primary' %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <h5>No project has been published yet</h5>
      <% end %>
    </div>
  <% if current_user && current_user.has_role?(:admin) %>
    <%= link_to 'New Project', new_project_path, class:'btn btn-primary' %>
  <% end %>

</div>
