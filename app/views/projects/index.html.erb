<div class="container">

  <h2>Projects</h2>

    <div class="row">
      <% if @projects.present? %>
        <% @projects.each do |project| %>
          <div class="col-sm-4 col-md-4">
            <div class="thumbnail">
              <img src="<%= project.thumbnail.url(:medium) %>" alt="thumbnail">
              <div class="caption">
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <hr>
                <p><%= project.difficulty %></p>
                <p><a href="#"><%= project.user.username %></a></p>
                <p><%= link_to 'Show', project, class:'btn btn-primary' %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <h5>No project has been published yet</h5>
      <% end %>
    </div>

  <%= link_to 'New Project', new_project_path, class:'btn btn-primary' %>

</div>
