<div class="jumbotron">
  <div class="container">
  </div>
</div>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">Sign Up</div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
        <%= devise_error_messages! %>

        <form class="row">
          <div class="form-group col-md-10 col-md-offset-1">
            <%= f.label :username, "*Username :", class: 'control-label'%>
            <%= f.text_field :username, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group col-md-10 col-md-offset-1">
            <%= f.label :email, "*Email :", class: 'control-label'%>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group col-md-5 col-md-offset-1">
            <%= f.label :password, "*Password :", class: 'control-label'%>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>

          <div class="form-group col-md-5">
            <%= f.label :password_confirmation, "*Confirm password :", class: 'control-label'%>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group col-md-5">
            <%= f.label :tags, "Expertises :" %>
            <% for tag in Tag.all %>
              <%= check_box_tag "user[tag_ids][]", tag.id, @user.tags.include?(tag) %>
              <%= tag.name %>
            <% end %>
          </div>

          <div class="col-md-10 col-md-offset-1">
            <hr>
          </div>

          <div class="form-group col-md-5 col-md-offset-1">
            <%= f.label :last_name, "Last name :", class: 'control-label'%>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>

          <div class="form-group col-md-5">
            <%= f.label :first_name, "First name :", class: 'control-label'%>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>

          <div class="form-group col-md-4 col-md-offset-1">
            <%= f.label :birthdate, "Birthdate :", class: 'control-label'%>
            <%= f.date_field :birthdate, class: 'form-control' %>
          </div>

          <div class="form-group col-md-3 col-md-offset-1">
            <%= f.label :gender, "Gender :", class: 'control-label'%>
            <br>
            <div class="checkbox-inline">
              <label for="gender">
                <%= f.radio_button :gender, true, class:'form-check-input' %>
                Male
              </label>
            </div>
            <div class="checkbox-inline">
              <label for="gender">
                <%= f.radio_button :gender, false, class:'form-check-input' %>
                Female
              </label>
            </div>
          </div>

          <div class="col-md-10 col-md-offset-1">
            <hr>
          </div>

          <div class="form-group col-md-7 col-md-offset-1">
            <%= f.label :address, "Adress :", class: 'control-label'%>
            <%= f.text_field :address, class: 'form-control' %>
          </div>

          <div class="form-group col-md-3">
            <%= f.label :post_code, "Postcode :", class: 'control-label'%>
            <%= f.text_field :post_code, class: 'form-control' %>
          </div>

          <div class="form-group col-md-5 col-md-offset-1">
            <%= f.label :city, "City :", class: 'control-label'%>
            <%= f.text_field :city, class: 'form-control' %>
          </div>

          <div class="form-group col-md-5">
            <%= f.label :country, "Country :", class: 'control-label'%>
            <%= f.text_field :country, class: 'form-control' %>
          </div>

          <div class="form-actions text-right col-md-10 col-md-offset-1">
            <%= f.submit "Sign up", class:"btn btn-primary" %>
          </div>

          <div class="col-md-10 col-md-offset-1">
            <%= render "devise/shared/links" %>
          </div>
        </form>

      <% end %>
    </div>
  </div>
</div>
