<div class="login">
	<div class="login-header">
    <%= link_to image_tag("logo.jpg"), root_path, class: 'logo' %>
    <h1>Sign In</h1>
  </div>
  <div class="login-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f| %>
      <%= devise_error_messages! %>
      <%= f.text_field :login, placeholder:'Identifiant' %>
      <%= f.password_field :password, placeholder:'Mot de passe', autocomplete: "off" %>
      <% if devise_mapping.rememberable? %>
        <div>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Remember me" %>
          </div>
        </div>
      <% end %>
      <button type="submit" class="login-button">Sign in</button>
    <% end %>
		<%= render "devise/shared/links" %>
  </div>
</div>
